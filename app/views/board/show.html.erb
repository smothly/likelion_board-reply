<div class="container">
    <h3>댓글입력창</h3>
    <form action="/comment/reply_create" method="POST">
      <input type = "hidden" name ="post_id" value = <%= @show_p.id %>>
      <div class="form-group">
        <label for="exampleInputPassword1">editor</label>
        <input type="text" name="editor" class="form-control" id="exampleInputPassword1" placeholder="작성자">
      </div>
      <div class="form-group">
          <label for="comment">content:</label>
          <textarea class="form-control" name="content" rows="10" id="comment" placeholder = "내용"></textarea>
        </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<% @show_p.replies.each do |p| %>
 댓글번호 : <%= p.id %><br>
 댓글 작성자 : <%= p.editor %><br>
 댓글 내용 : <%= p.content %><br>
 <a href = "/comment/reply_delete/<%= p.id %>">[삭제]</a>
 <hr>
<% end %>